<div class="card mb-3">
    <div class="row">
        <div class="col-12">
            <img src="/images/<%= imageUrl %>" alt="" class="img-fluid" style="width: 100%; height: 300px; object-fit: cover;">
            
        </div>
        <div class="col-12">
            <div class="card-body">
                <h3 class="card-title" style="font-size: 12px;">
                    <a href="/products/<%= id %>">
                        <%= rate %><br>
                        <%= id %>
                        <%= name %>
                    </a>
                </h3>
            </div>
        </div>
    </div>
</div>
